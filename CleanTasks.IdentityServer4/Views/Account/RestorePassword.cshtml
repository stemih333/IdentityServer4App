
@{
    ViewData["Title"] = "Restore Password";
}
@model RestorePasswordViewModel

<div class="login-page">
    <partial name="_ValidationSummary" />

    <div class="row">

        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Restore password</h3>
                </div>
                <div class="panel-body">
                    <form asp-route="RestorePassword">
                        <fieldset>
                            <input type="hidden" asp-for="Token" />
                            <input type="hidden" asp-for="Email" />
                            <div class="form-group">
                                <label asp-for="NewPassword"></label>
                                <input class="form-control" type="password"  asp-for="NewPassword" autofocus>
                            </div>

                            <div class="form-group">
                                <label asp-for="ConfirmPassword"></label>
                                <input class="form-control" type="password" asp-for="ConfirmPassword" autofocus>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-primary" name="button" value="submit">Submit</button>
                                <a class="btn btn-default" asp-action="Login">Cancel</a>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>