
@{
    ViewData["Title"] = "Forgot password?";
}

@model ForgotPasswordViewModel
<div class="login-page">
    <partial name="_ValidationSummary" />
    
    <div class="row">

        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Restore password E-mail address</h3>
                </div>
                <div class="panel-body">
                    <form asp-route="ForgotPassword">
                        <p>Enter an E-mail address where a restore password link can be sent.</p>
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="mailaddress@email.com" asp-for="Email" autofocus>
                            </div>
                            
                            <div class="form-group">
                                <button class="btn btn-primary" name="button" value="submit">Submit</button>
                                <a class="btn btn-default" asp-action="Login">Cancel</a>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

